modules = ["nodejs-20", "web"]

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Development"

[[workflows.workflow]]
name = "Build"
author = 42706880
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

[[workflows.workflow]]
name = "Development"
author = 42706880
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev -- --hostname 0.0.0.0 --port 5000"

[[workflows.workflow]]
name = "Static Build"
author = 42706880
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

[[ports]]
localPort = 3000
externalPort = 80

[deployment]
run = ["sh", "-c", "npx serve out -s -l 3000"]
build = ["sh", "-c", "npm run build"]

[agent]
expertMode = true
